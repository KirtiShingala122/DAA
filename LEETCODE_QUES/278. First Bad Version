
// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

class Solution {
public:
    void rec(int low,int high,int &ans){
        if(low>high) return;
        int mid=low + (high-low)/2;
        if(isBadVersion(mid)) {
            ans=mid;
            rec(low,mid-1,ans);
            return;
        }
        else   rec(mid+1,high,ans);
    }
    int firstBadVersion(int n) {
       
       int ans=1;
       rec(0,n,ans);
       return ans; 
    }
};
